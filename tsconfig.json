{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "exactOptionalPropertyTypes": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/extension.ts",
    "src/prefs.ts"
  ]
}